#!/usr/bin/env ruby
require 'net/https'
require 'uri'
require 'openssl'

$url = "https://lvh.me"

command = <<EOF
curl -vv \
--cacert output/server_publ.crt \
--key output/client_priv.key.nopass \
--cert output/client_publ.crt \
#{$url}
EOF
puts "---------------------------"
puts "EXECUTING:"
puts command
puts "---------------------------"
system(command)