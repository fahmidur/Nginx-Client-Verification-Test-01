server {
    listen        443;
    ssl on;
    server_name test-nginx-client-cert.lvh.me;

    ssl_certificate      <%= server_publ %>;
    ssl_certificate_key  <%= server_priv_nopass %>;

    ssl_client_certificate <%= client_ca_root_publ %>;
    ssl_verify_client on;
    ssl_verify_depth 2;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

}
